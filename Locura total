<script>
    function checkPassword() {
        const pass = document.getElementById("password").value;
        if (pass.toLowerCase() === "locura") {
            document.getElementById("login").classList.add("hidden");
            document.getElementById("countdownBox").classList.remove("hidden");
            startCountdown();
        } else {
            document.getElementById("error").textContent = "Contrase√±a incorrecta. Intento registrado üëÅÔ∏è";
        }
    }

    function startCountdown() {
        let time = 5;
        const countdown = document.getElementById("countdown");
        const interval = setInterval(() => {
            time--;
            countdown.textContent = time;
            if (time === 0) {
                clearInterval(interval);
                document.getElementById("countdownBox").classList.add("hidden");
                document.getElementById("final").classList.remove("hidden");
            }
        }, 1000);
    }
</script>

